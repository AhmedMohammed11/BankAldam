<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/dim_8dp"
    android:layout_marginEnd="@dimen/dim_8dp"
    android:layout_marginTop="@dimen/dim_8dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shap_relative"
    android:gravity="center">

    <TextView
        android:id="@+id/card_view_donaton_requestes_txt_blood_type"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dim_8dp"
        android:layout_marginEnd="@dimen/dim_8dp"
        android:layout_marginBottom="@dimen/dim_8dp"
        android:background="@drawable/shap_txt_circle"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/card_view_donaton_requestes_ll_action_container"
        android:layout_toEndOf="@id/card_view_donaton_requestes_txt_blood_type"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_view_donaton_requestes_txt_pation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_8dp"
            android:layout_marginEnd="@dimen/dim_8dp"
            android:layout_marginBottom="@dimen/dim_8dp"
            android:text="@string/pation_name" />

        <TextView
            android:id="@+id/card_view_donaton_requestes_txt_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_8dp"
            android:layout_marginEnd="@dimen/dim_8dp"
            android:layout_marginBottom="@dimen/dim_8dp"
            android:text="@string/hospital" />

        <TextView
            android:id="@+id/card_view_donaton_requestes_txt_Government"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_8dp"
            android:layout_marginEnd="@dimen/dim_8dp"
            android:layout_marginBottom="@dimen/dim_8dp"
            android:text="Government :" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_view_donaton_requestes_ll_action_container"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/card_view_donaton_requestes_btn_details"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/dim_8dp"
            android:layout_marginStart="@dimen/dim_8dp"
            android:layout_marginEnd="@dimen/dim_8dp"
            android:layout_marginBottom="@dimen/dim_8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_original"
            android:text="Details" />

        <Button
            android:id="@+id/card_view_donaton_requestes_btn_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_8dp"
            android:layout_marginEnd="@dimen/dim_8dp"
            android:layout_marginBottom="@dimen/dim_8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_green"
            android:drawableEnd="@drawable/ic_phone_black_24dp"
            android:text="@string/call" />
    </LinearLayout>

</RelativeLayout>