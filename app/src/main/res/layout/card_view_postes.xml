<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/card_view_img_imageview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/card_view_ly_container"
        android:layout_marginStart="@dimen/dim_8dp"
        android:layout_marginEnd="@dimen/dim_8dp"
        android:layout_marginBottom="@dimen/dim_8dp" />

    <LinearLayout
        android:id="@+id/card_view_ly_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/card_view_postes_cb_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dim_8dp"
            android:layout_toLeftOf="@id/card_view_postes_tv_title"
            android:button="@drawable/ic_favorite_border_black_24dp" />

        <TextView
            android:id="@+id/card_view_postes_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="text text text text"
            android:textSize="@dimen/txt_20sp" />
    </LinearLayout>

</RelativeLayout>